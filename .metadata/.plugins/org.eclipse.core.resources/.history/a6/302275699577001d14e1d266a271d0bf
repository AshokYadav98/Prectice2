package StringBufferClassStudy;

public class StringbufferTryl1 {

	public static void main(String[] args) 
	{
		
		String name="Ashok";
		
		StringBuffer b=new StringBuffer("Yadav");
		
	
	
	   System.out.println(b.append(" Ashok"));
	   
	   System.out.println(b.reverse());
	   
	   System.out.println(b.insert(10, true));
	   
	   System.out.println(b.capacity());
	   
	   System.out.println(b.charAt(1));
	   
	   System.out.println(b.indexOf("a"));
	   

	}

}
