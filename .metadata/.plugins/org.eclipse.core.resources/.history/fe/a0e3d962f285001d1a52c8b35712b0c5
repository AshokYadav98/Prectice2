package logicalprogrampractice;

public class Exa3 {

	public static void main(String[] args) 
	{
		
		//  *                     a
		//  **                    b c
		//  ***                   d e f
		//  ****                  g h i j
		//  *****                 k l m n o
		
		
		//row -->5 star -->1
		
		int star=1;
		
		for(int i=1;i<=5;i++)
		{
			for(int j=1;j<=star;j++)
			{
				System.out.print("*");
			}
			System.out.println();
			
			star++;
		}

	}

}
