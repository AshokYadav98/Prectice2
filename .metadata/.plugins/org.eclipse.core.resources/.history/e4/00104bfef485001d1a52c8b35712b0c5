package logicalprogrampractice;

public class Exa3 {

	public static void main(String[] args) 
	{
		
		//  *                     a
		//  **                    b c
		//  ***                   d e f
		//  ****                  g h i j
		//  *****                 k l m n o
		
		
		//row -->5 star -->1
		
		int a=0;
		
		int alphabet=97;
		
		for(int i=1;i<=5;i++)
		{
			for(int j=1;j<=a;j++)
			{
				System.out.print((char)(alphabet+j)+" ");
			}
			System.out.println();
			
			a++;
		}

	}

}
