package logicalPrograms;

import java.util.Scanner;

public class ReverseNumWithString {

	public static void main(String[] args) 
	{
		
		Scanner sc=new Scanner(System.in);
		
		System.out.println("please enter any number");
		
		int orignalintNum = sc.nextInt();
		
		String StringNum = Integer.toString(orignalintNum);
		
		String rev="";
		
		for(int i=StringNum.length()-1;i>=0;i--)
		{
			
			char t = StringNum.charAt(i);
			
			rev=rev+t;
		}
		System.out.println("Reverse string number is "+rev);
		
		int RevintNum = Integer.parseInt(rev);


	}

}
